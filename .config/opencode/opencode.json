{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    },
    "glootie": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-glootie@latest"
      ],
      "enabled": true
    }
  }
}
